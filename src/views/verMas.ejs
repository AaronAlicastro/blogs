<%- include("cabecera.ejs") %>
    <div id="containerTitleBlog">
        <h1 id="titleBlog"><%=blogs.titulo%></h1>
        <div>
            <%=blogs.commentBlog.cantidadLikes%>
            <% if(blogs.commentBlog.cantidadLikes == 0){ %>  <img id="imgLike" src="data:image/png;base64," alt="no found">
            <% }else{ %> <img id="imgLike" src="data:image/png;base64," alt="no found"> <% } %>
            <!-- imagen del like -->
        </div>
    </div>
    <p id="descripcionBlogView">
        <img src="<%=blogs.url_imagen%>" alt="image here">
        <%=blogs.descripcion%>
    </p>

    <div id="containerComentarios">
        <h2>Comentarios</h2>
        <% for(let i = 0; i < blogs.commentBlog.comments.length; i++){ %>
            <div id="comentarios_comentarios">
                <div class="coment">
                    <h3><%=blogs.commentBlog.comments[i].userName%></h3>
                    <textarea readonly> <%=blogs.commentBlog.comments[i].comentario%> </textarea>
                </div>
            </div>
        <% } %>

        <h3>A&ntildeade un comentario</h3>
        <form id="formComentario">
            <div class="centarOpciones">
                <input class="formComentario_opciones" type="text" id="nameUsuario" name="nameUsuario" placeholder="Ingresa tu nombre">
            </div>
            <textarea class="formComentario_opciones" id="comentario" name="comentario" placeholder="Type your comment"></textarea>
            <div class="centarOpciones">
                <button class="formComentario_opciones" type="submit" id="enviarComentario">Enviar</button>
            </div>
        </form>
    </div>

    <script>
        $("#enviarComentario").click(e=>{
            e.preventDefault();
            if($("#nameUsuario").val().trim() == "" || $("#comentario").val().trim() == ""){
                alert("Debes llenar ambos campos");
            }else{
                $.ajax({
                    url: "/anadirComentario/<%=blogs._id%>",
                    type: "post",
                    data: $("#formComentario").serialize(),
                    success: response=>{
                        history.go(0);
                    }
                });
                $("#formComentario").trigger("reset");
            }
        });

        $("#imgLike").click(e=>{
            $("#imgLike").attr("src","data:image/png;base64,");
            $.ajax({
                url: "/aumentarLike/<%=blogs._id%>",
                type: "post",
                success: response=>{
                    history.go(0);
                }
            });
            $("#formComentario").trigger("reset");
        });
    </script>
